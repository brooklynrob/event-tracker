
  
<body ng-app="eventTrackerApp" ng-controller="EventListCtrl">
<h1>Listing Events</h1>
<h2>This is an angular app</h2>
  <table class="table table-striped">
    <tr>
      <th>Event Title</th>
      <th>Event City</th>
      <th>&nbsp;</th>
    </tr>
    
    <tr ng-repeat="event in events">
      <td>{{event.event.event_title}}</td>
      <td>{{event.event.event_city}}</td>
      <td><a href="" ng-click="removeEvent(event)">Remove</a></td>
    </tr>
          
    <tr>
    <!-- <form ng-submit="addEvent()"> --> 
      <td><div class="form-group">
        <input type="text" ng-model="event_title"></input>
      </div>
      </td>
      
      <td>
        <div class="form-group">
          <input type="text" ng-model="event_city"></input>
        </div>
      </td>
      <td>
        <a href="" ng-click="addEvent(event)">Add Event</a>
        <!-- <button type="submit" class="btn btn-default">Add Event</button>-->
      </td>
    </form>
    </tr>

</table>
</body>
